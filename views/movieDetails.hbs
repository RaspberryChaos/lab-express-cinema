<div class="flex container">
    <div>
        <img src="{{movie.image}}" alt="movie poster" id = "movie-poster" class="shadow">
    </div>
    <div class="movie-details flex col">
        <a href="/movies">Go Back</a>
        <h2>{{movie.title}}</h2>
        <h3>Director: {{movie.director}}</h3>
        <h4>Stars</h4>
        <ul>
        {{#each movie.stars}}
        <li>{{this}}</li>
        {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        <p>
            {{#each movie.showtimes}}
            {{this}} |
            {{/each}}
        </p>
    </div>
</div>